# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration (PostgreSQL)
# Option 1: Supabase (Recommended for free tier)
DATABASE_URL=postgresql://username:password@db.supabaseproject.co:5432/postgres

# Option 2: Local PostgreSQL
# DATABASE_URL=postgresql://localhost:5432/intelliwealth

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this
JWT_REFRESH_EXPIRE=30d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
FRONTEND_PROD_URL=https://github-code542.github.io

# Email Configuration (for password reset, verification)
# Using SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@intelliwealth.com
FROM_NAME=IntelliWealth

# Optional: Email using SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=your-session-secret-change-this

# File Upload (if needed later)
MAX_FILE_SIZE=5242880

# Logging
LOG_LEVEL=info

# Deployment
# For Railway.app
RAILWAY_ENVIRONMENT=production

# For Render.com
RENDER_EXTERNAL_URL=https://your-app.onrender.com
